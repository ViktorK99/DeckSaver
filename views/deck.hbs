<div class="container mt-3">
    <div class="row d-xs-flex justify-content-center ">
        <div class=" col-12 col-sm-6 mb-3" style="max-width: 25rem;">
            <div class="card text-white bg-primary rounded">
                <div class="card-header bg-dark">
                    <img src="/images/{{deck.deckClass}}.png" alt="deckClass" width="45" height="45" class="d-inline-block">
                    <h4 class="d-inline-block">{{deck.deckName}}</h4>
                </div>
                <div class="card-body">
                    
                </div>
            </div>
        </div>
        <div class=" col-12 col-sm-6 ms-sm-auto mb-3" style="max-width: 20rem;">
            <div class="card text-white bg-primary">
                <div class="card-header bg-dark d-grid gap-2">
                    <button type="button" class="btn btn-info rounded">Copy Deck String</button>
                </div>
                {{#each cardsInDeck}}
                <div class="cardContainer">
                        <span class="rarity-{{toLowerCase this.[0].rarity}} cardCost text-center">{{this.[0].cost}}</span>
                    <div class="cardFrame">
                        <img src="https://art.hearthstonejson.com/v1/tiles/{{this.[0].id}}.jpg" class="rounded float-end cardImage">
                        <div class="backgroundCard">
                            <span class="cardText">{{this.[0].name}}</span>
                        </div>
                        <span class="cardCount text-center">{{this.[1]}}</span>
                    </div>
                </div>
                {{/each}}
            </div>
        </div>
    </div>
</div>
